<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uni.mvpu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/coffecup"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="@string/title_activity_setup" />
        <activity
            android:name=".ActivityRoute"
            android:label="@string/title_activity_activity_route" />
        <activity
            android:name=".ActivitySelectRoute"
            android:label="@string/title_activity_activity_select_route" />
        <activity
            android:name=".ActivitySync"
            android:label="@string/title_activity_activity_sync" />
        <activity
            android:name=".ActivityOrderList"
            android:label="@string/title_activity_activity_order_list" />
        <activity
            android:name=".ActivityOrder"
            android:label="@string/title_activity_activity_order"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ActivitygetVersion"
            android:label="@string/title_activity_activityget_version" />
        <activity
            android:name=".ActivityDebt"
            android:label="@string/title_activity_activity_debt" />
        <activity
            android:name=".NewCustomersList"
            android:label="@string/title_activity_bew_customers" />

        <service
            android:name=".GPSLoggerService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/service_name" />

        <activity android:name=".ActivityEditNewCustomer" />
        <activity android:name=".ActivityNoResult" />
        <activity
            android:name=".ActivityTask"
            android:label="@string/title_activity_task"></activity>
    </application>

</manifest> <!-- android:screenOrientation="landscape" -->
