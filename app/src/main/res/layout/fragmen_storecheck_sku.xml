<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.uni.mvpu.FragmenStorecheckSku">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:showDividers="end"
        android:baselineAligned="true"
        android:background="@android:color/black">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заполнить сторчек"
            android:id="@+id/btnStorechekDisplayAllRows"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Параметры"
            android:id="@+id/btnOrderParamsDialog"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewSkuStorecheck"
            android:dividerHeight="1dp"
            android:divider="@android:color/holo_blue_light" />
    </LinearLayout>

</FrameLayout>
