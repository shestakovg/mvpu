<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<GridLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:rowCount="2"-->
        <!--android:useDefaultMargins="true">-->


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:showDividers="end"
            android:baselineAligned="true"
            android:background="@android:color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Строк:   "
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_light" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrderRowCount"
                android:text="Строк: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма:   "
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_light"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrderSum"
                android:text="Строк: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_light"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказ"
                android:id="@+id/btnOrderDisplayAllRows"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Параметры"
                android:id="@+id/btnOrderParamsDialog"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDeliveyDateSku"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/background_light"
                android:text="Доставка: 22.06.2015"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listViewSkuOrder"
                android:dividerHeight="1dp"
                android:divider="@android:color/holo_blue_light" />
        </LinearLayout>

    <!--</GridLayout>-->
</LinearLayout>
