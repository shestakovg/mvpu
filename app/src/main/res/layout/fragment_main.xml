<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView" />-->


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="10"
        android:columnCount="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/btnTest"
            android:visibility="invisible" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/seller"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Маршрут"
            android:id="@+id/textViewRoute"
            android:layout_row="2"
            android:layout_column="0" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Текущий маршрут"
            android:id="@+id/btnRouteDay"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Приступить к работе"
            android:id="@+id/btnBeginWork"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Версия программы: "
            android:id="@+id/textViewVersion"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:id="@+id/btnSetup"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Синхронизация"
            android:id="@+id/btnSyncServer"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Мои заказы"
            android:id="@+id/btnMyOrders"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Мои сторчеки"
            android:id="@+id/btnMyStorecheck"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Мои оплаты"
            android:id="@+id/btnMyPays"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="sans" />

    </GridLayout>
</ScrollView>

