<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.uni.mvpu.SetupActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cервисы"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextServiceLink" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Маршрут"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextRouteName"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="30dp"
             />
     <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать маршрут"
            android:textStyle="bold"
            android:onClick="onClickSelectRoute"
            android:layout_gravity="left"
            android:fontFamily="@string/hello_world" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Сотрудник"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmployeeName"
        android:textSize="30dp"
        android:layout_gravity="left"

     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:id="@+id/btnSave"
        android:onClick="onClickBtnSave"
        android:layout_gravity="center_horizontal" />




</LinearLayout>



