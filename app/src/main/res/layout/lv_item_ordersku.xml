<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnEditSkuRow"
                    android:background="@android:drawable/ic_delete" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewOrderOnlyFact"
                    android:textStyle="bold"
                    android:text="Fact"
                    android:textColor="#ff1f1c" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewOrderSkuName"
                    android:text="Current sku"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:typeface="sans"
                    android:singleLine="true"
                    android:focusableInTouchMode="false"
                    android:textColor="#ff000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinnerPriceType"
                    android:text="Price type"
                    android:spinnerMode="dialog"
                    android:foreground="@android:color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена:"/>
                <TextView
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPrice"
                    android:text="Price"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ост гл:"/>
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewMWH"
                    android:text="StockMWH:"
                    android:numeric="decimal"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editMWH"
                    android:textStyle="bold|italic"
                    android:singleLine="false"
                    android:gravity="center"
                    android:textColor="#ff423aff"
                    android:text="111"
                    android:textSize="20dp"
                    android:editable="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ост розн:"/>
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRWH"
                    android:text="StockRWH:"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editRWH"
                    android:textStyle="bold|italic"
                    android:textColor="#ff423aff"
                    android:text="222"
                    android:singleLine="false"
                    android:textSize="20dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стоимость: "/>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSum"
                    android:text="Sum"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="В тт: "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:id="@+id/textOutletStock"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    />

            </LinearLayout>
</LinearLayout>
